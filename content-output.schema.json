{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Newsletter Episode Schema",
    "type": "object",
    "properties": {
      "$schema": {
        "type": "string"
      },
      "episode": {
        "type": "object",
        "properties": {
          "number": {
            "type": "integer"
          },
          "date": {
            "type": "string"
          },
          "title": {
            "type": "string"
          }
        },
        "required": [
          "number",
          "date",
          "title"
        ],
        "additionalProperties": false
      },
      "intro": {
        "type": "string"
      },
      "showNotes": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "quickfireQuestions": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "breakingProdLeaderboard": {
        "type": "object",
        "properties": {
          "summary": {
            "type": "string"
          }
        },
        "required": [
          "summary"
        ],
        "additionalProperties": false
      },
      "bigTopic": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "questions": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "title",
          "questions"
        ],
        "additionalProperties": false
      },
      "news": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "items": {
              "type": "object",
              "properties": {
                "type": { "type": "string" },
                "title": { "type": "string" },
                "description": { "type": "string" },
                "uploadedImageUrl": { "type": "string", "format": "uri" },
                "url": { "type": "string", "format": "uri" },
                "buttonText": { "type": "string" },
                "buttonBackgroundColour": { "type": "string" },
                "buttonTextColour": { "type": "string" }
              },
              "required": [ "type", "title", "url", "description", "uploadedImageUrl", "buttonBackgroundColour", "buttonTextColour", "buttonText"],
              "additionalProperties": false
            }
          }
        }
      },
      "recommendations": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "sectionName": { "type": "string" },
            "displayName": { "type": "string" },
            "items": { "type": "array" }
          },
          "required": [ "sectionName", "displayName", "items" ],
          "oneOf": [
            {
              "if": {
                "properties": { "sectionName": { "const": "music" } }
              },
              "then": {
                "properties": {
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "artist": { "type": "string" },
                        "album": { "type": "string" },
                        "description": { "type": "string" },
                        "uploadedImageUrl": { "type": "string", "format": "uri" },
                        "links": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "platform": { "type": "string" },
                              "url": { "type": "string", "format": "uri" }
                            },
                            "required": [ "platform", "url" ],
                            "additionalProperties": false
                          }
                        }
                      },
                      "required": [ "artist", "description", "uploadedImageUrl", "links" ],
                      "additionalProperties": false
                    }
                  }
                }
              },
              "else": { "not": {} }
            },
            {
              "if": {
                "properties": { "sectionName": { "const": "relatedTopic" } }
              },
              "then": {
                "properties": {
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "type": { "type": "string" },
                        "title": { "type": "string" },
                        "authors": {
                          "type": "array",
                          "items": { "type": "string" }
                        },
                        "description": { "type": "string" },
                        "uploadedImageUrl": { "type": "string", "format": "uri" },
                        "url": { "type": "string", "format": "uri" },
                        "buttonText": { "type": "string" },
                        "buttonBackgroundColour": { "type": "string" },
                        "buttonTextColour": { "type": "string" }
                      },
                      "required": [ "type", "title", "url", "description", "uploadedImageUrl", "buttonBackgroundColour", "buttonTextColour", "buttonText"],
                      "additionalProperties": false
                    }
                  }
                }
              },
              "else": { "not": {} }
            },
            {
              "if": {
                "properties": { "sectionName": { "const": "tech" } }
              },
              "then": {
                "properties": {
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "type": { "type": "string" },
                        "title": { "type": "string" },
                        "description": { "type": "string" },
                        "url": { "type": "string", "format": "uri" },
                        "uploadedImageUrl": { "type": "string", "format": "uri" },
                        "buttonText": { "type": "string" },
                        "buttonBackgroundColour": { "type": "string" },
                        "buttonTextColour": { "type": "string" }
                      },
                      "required": [ "title", "description", "url", "uploadedImageUrl", "buttonText", "buttonBackgroundColour", "buttonTextColour" ],
                      "additionalProperties": false
                    }
                  }
                }
              },
              "else": { "not": {} }
            },
            {
              "if": {
                "properties": { "sectionName": { "const": "tv_and_film" } }
              },
              "then": {
                "properties": {
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "type": { "type": "string" },
                        "title": { "type": "string" },
                        "description": { "type": "string" },
                        "url": { "type": "string", "format": "uri" },
                        "uploadedImageUrl": { "type": "string", "format": "uri" },
                        "buttonText": { "type": "string" },
                        "buttonBackgroundColour": { "type": "string" },
                        "buttonTextColour": { "type": "string" }
                      },
                      "required": [ "title", "description", "url", "uploadedImageUrl", "buttonText", "buttonBackgroundColour", "buttonTextColour" ],
                      "additionalProperties": false
                    }
                  }
                }
              },
              "else": { "not": {} }
            },
            {
              "if": {
                "properties": { "sectionName": { "const": "books" } }
              },
              "then": {
                "properties": {
                  "items": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                          "type": { "type": "string" },
                          "title": { "type": "string" },
                          "description": { "type": "string" },
                          "uploadedImageUrl": { "type": "string", "format": "uri" },
                          "url": { "type": "string", "format": "uri" },
                          "buttonBackgroundColour": { "type": "string" },
                          "buttonTextColour": { "type": "string" },
                          "buttonText": { "type": "string" }
                        },
                        "required": [ "type", "title", "url", "description", "uploadedImageUrl", "buttonBackgroundColour", "buttonTextColour", "buttonText" ],
                        "additionalProperties": false
                    }
                  }
                }
              },
              "else": { "not": {} }
            },
            {
              "if": {
                "properties": { "sectionName": { "const": "podcasts" } }
              },
              "then": {
                "properties": {
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "type": { "type": "string" },
                        "title": { "type": "string" },
                        "description": { "type": "string" },
                        "uploadedImageUrl": { "type": "string", "format": "uri" },
                        "url": { "type": "string", "format": "uri" },
                        "buttonBackgroundColour": { "type": "string" },
                        "buttonTextColour": { "type": "string" },
                        "buttonText": { "type": "string" }
                      },
                      "required": [ "type", "title", "url", "description", "uploadedImageUrl", "buttonBackgroundColour", "buttonTextColour", "buttonText" ],
                      "additionalProperties": false
                    }
                  }
                }
              },
              "else": { "not": {} }
            }
          ]
        }
      },
      "joke": {
        "type": "object",
        "properties": {
          "setup": { "type": "string" },
          "punchline": { "type": "string" }
        },
        "required": [ "setup", "punchline" ],
        "additionalProperties": false
      }
    },
    "required": [
      "episode",
      "intro",
      "showNotes",
      "quickfireQuestions",
      "breakingProdLeaderboard",
      "bigTopic",
      "news",
      "recommendations",
      "joke"
    ],
    "additionalProperties": false
  }
