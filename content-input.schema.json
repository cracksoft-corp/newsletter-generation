{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Newsletter Episode Schema",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "episode": {
            "type": "object",
            "properties": {
                "number": {
                    "type": "integer"
                },
                "date": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                }
            },
            "required": [
                "number",
                "date",
                "title"
            ],
            "additionalProperties": false
        },
        "intro": {
            "type": "string"
        },
        "showNotes": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "quickfireQuestions": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "breakingProdLeaderboard": {
            "type": "object",
            "properties": {
                "summary": {
                    "type": "string"
                }
            },
            "required": [
                "summary"
            ],
            "additionalProperties": false
        },
        "bigTopic": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                },
                "questions": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "title",
                "questions"
            ],
            "additionalProperties": false
        },
        "news": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "url": {
                        "type": "string"
                    }
                },
                "required": [
                    "title",
                    "link"
                ],
                "additionalProperties": false
            }
        },
        "recommendations": {
            "type": "object",
            "properties": {
                "relatedTopic": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "type": {
                                "type": "string"
                            },
                            "title": {
                                "type": "string"
                            },
                            "url": {
                                "type": "string",
                                "format": "uri"
                            },
                            "authors": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        },
                        "required": [
                            "type",
                            "title",
                            "url"
                        ],
                        "additionalProperties": false
                    }
                },
                "music": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "artist": {
                                "type": "string"
                            },
                            "album": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "artist"
                        ],
                        "additionalProperties": false
                    }
                },
                "tech": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "title": {
                                "type": "string"
                            },
                            "description": {
                                "type": "string"
                            },
                            "url": {
                                "type": "string",
                                "format": "uri"
                            }
                        },
                        "required": [
                            "title",
                            "description",
                            "url"
                        ],
                        "additionalProperties": false
                    }
                },
                "tv": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "title": {
                                "type": "string"
                            },
                            "url": {
                                "type": "string",
                                "format": "uri"
                            }
                        },
                        "required": [
                            "title",
                            "url"
                        ],
                        "additionalProperties": false
                    }
                },
                "books": {
                    "type": [
                        "array",
                        "null"
                    ]
                },
                "podcasts": {
                    "type": [
                        "array",
                        "null"
                    ]
                }
            },
            "required": [
                "relatedTopic",
                "music",
                "tech",
                "tv",
                "books",
                "podcasts"
            ],
            "additionalProperties": true
        },
        "joke": {
            "type": "object",
            "properties": {
                "setup": {
                    "type": "string"
                },
                "punchline": {
                    "type": "string"
                }
            },
            "required": [
                "setup",
                "punchline"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "episode",
        "intro",
        "showNotes",
        "quickfireQuestions",
        "breakingProdLeaderboard",
        "bigTopic",
        "news",
        "recommendations",
        "joke"
    ],
    "additionalProperties": false
}
